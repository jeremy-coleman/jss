{
  "compilerOptions": {
    "target": "es2018",
    "pretty": true,
    "module": "es2015",
    "jsx":"react",
    "moduleResolution": "node",
    "outDir": "build/es",
    "baseUrl": "./src",
    "declarationDir": "build/types",
    "declaration": true,
    "declarationMap": true,
    "lib":["dom", "dom.iterable", "esnext"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"],
  "include": ["packages/**/*.ts", "src"]
}
